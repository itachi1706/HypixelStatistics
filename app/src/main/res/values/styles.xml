<resources>

    <!-- Base application theme. -->
    <!--
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="AppTheme.Base" />
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/mainPrimary</item>
        <item name="colorPrimaryDark">@color/mainPrimaryDark</item>
        <item name="colorAccent">@color/mainAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
        <!-- Customize your theme here. -->

    <!-- New App Theme -->
    <style name="NewTheme" parent="NewTheme.Base" />
    <style name="NewTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/newPrimary</item>
        <item name="colorPrimaryDark">@color/newPrimaryDark</item>
        <item name="colorAccent">@color/newAccent</item>
    </style>
    <style name="NewTheme.NoActionBar" parent="NewTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

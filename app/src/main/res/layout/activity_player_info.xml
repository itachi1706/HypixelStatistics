<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itachi1706.hypixelstatistics.PlayerInfoActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/PlayerBtnChk"
        android:id="@+id/PlayeretName"
        android:hint="@string/player_etHint"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_btnchk"
        android:id="@+id/PlayerBtnChk"
        android:layout_alignBottom="@+id/PlayeretName"
        android:layout_alignRight="@+id/player_tvDebug"
        android:layout_alignEnd="@+id/player_tvDebug" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/player_tvDebug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scrollbars="vertical"
        android:maxLines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/player_lblResult"
        android:layout_below="@+id/PlayeretName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/PlayerBtnChk"
        android:layout_alignRight="@+id/playerIvPlayerHead"
        android:layout_alignEnd="@+id/playerIvPlayerHead" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/player_tvGeneral"
        android:layout_below="@+id/player_lblResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/player_tvDebug"
        android:layout_alignRight="@+id/player_tvDebug"
        android:layout_alignEnd="@+id/player_tvDebug" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerIvPlayerHead"
        android:layout_alignTop="@+id/player_lblResult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxWidth="500px"
        android:maxHeight="500px" />
</RelativeLayout>

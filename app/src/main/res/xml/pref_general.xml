<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General" android:key="cat_gen">
        <CheckBoxPreference
            android:key="debugMode"
            android:title="@string/pref_debug_title"
            android:summary="@string/pref_debug_summary"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="detailed_active_boosters"
            android:title="@string/pref_detailed_active_boosters_title"
            android:summary="@string/pref_detailed_active_boosters_summary"
            android:defaultValue="false" />
        <ListPreference
            android:title="Application Theme"
            android:summary="%s"
            android:defaultValue="AppTheme"
            android:key="appThemePref"
            android:entries="@array/themeArray"
            android:entryValues="@array/themeValues"/>
        <Preference android:title="API Key (Click to enter personal key)" android:key="api_key" android:summary="Obtaining Key..."/>
        <Preference android:title="View API Key Info" android:key="view_api_info" android:summary="View information regarding the API Key"/>
        <Preference android:title="History" android:key="view_hist_activity" android:summary="View History stored onto your Device"/>
        <Preference android:title="Player" android:key="staff_p" android:summary="-"/>
        <Preference android:title="Player UUID" android:key="staff_uuid" android:summary="-"/>
        <Preference android:title="Staff Rank (Staff Only)" android:key="staff_rnk" android:summary="-"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="App Info" android:key="info_category">
        <Preference android:title="Check for Update" android:key="launch_updater" android:summary="Checks for new version of the application"/>
        <Preference android:title="Get Latest App Version" android:key="get_latest_app" android:summary="Launch a webpage to get the latest release of the application!"/>
        <Preference android:title="Get Legacy Versions of App" android:key="get_old_app" android:summary="Launch a webpage to get older releases of the application!"/>
        <Preference android:title="View Changelog" android:key="android_changelog" android:summary="View Changelog Information" />
        <Preference android:title="App Version" android:key="view_app_version" android:summary="NULL" />
        <Preference android:title="Package Name" android:key="view_app_name"/>
        <Preference android:summary="None" android:title="Android Version" android:key="view_sdk_version"/>
        <Preference android:title="View Device Info" android:key="vDevInfo" android:summary="View information of your device"/>
    </PreferenceCategory>

</PreferenceScreen>
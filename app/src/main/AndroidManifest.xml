<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itachi1706.hypixelstatistics" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="com.itachi1706.hypixelstatistics.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itachi1706.hypixelstatistics.KeyInfoActivity"
            android:label="@string/title_activity_key_info" >
        </activity>
        <activity
            android:name="com.itachi1706.hypixelstatistics.OldPlayerInfoActivity"
            android:label="@string/title_activity_player_info_old" >
        </activity>
        <activity
            android:name="com.itachi1706.hypixelstatistics.GeneralPrefActivity"
            android:label="@string/title_activity_general_pref" >
        </activity>
        <activity
            android:name="com.itachi1706.hypixelstatistics.PlayerInfoActivity"
            android:label="@string/title_activity_player_info" >
        </activity>
        <activity
            android:name="com.itachi1706.hypixelstatistics.BoosterList"
            android:label="@string/title_activity_booster_list" >
        </activity>
    </application>

</manifest>
